<!ELEMENT prodcat (product*)>
<!ELEMENT product (name, description?, composition+, price?,  meta*)>
<!ELEMENT name EMPTY>
<!ELEMENT composition ((atomicProduct|resource)+, composition*)>
<!ELEMENT price EMPTY>
<!ELEMENT meta EMPTY>
<!ELEMENT atomicProduct EMPTY>
<!ELEMENT resource EMPTY>

<!ATTLIST product
	id ID #REQUIRED
	discoverable (true|false) #REQUIRED
>

<!ATTLIST composition
	type (include|mutex) #REQUIRED
>

<!ATTLIST price
	isoCurrencyCode CDATA #REQUIRED
	amount CDATA #REQUIRED
>

<!ATTLIST meta
	name CDATA #REQUIRED
	value CDATA #REQUIRED
>

<!ATTLIST atomicProduct
	id IDREF #REQUIRED
>

<!ATTLIST resource
	id CDATA #REQUIRED
>